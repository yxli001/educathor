{
    "manifest_version": 3,
    "name": "TuzzAI",
    "version": "1.0.0",
    "description": "AI-powered learning assistant for online courses",
    "permissions": ["storage", "activeTab", "scripting", "tabs"],
    "externally_connectable": {
        "matches": ["http://localhost:5173/*"]
    },
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/contentScript.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
